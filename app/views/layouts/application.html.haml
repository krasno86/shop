!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Shop
    -#= csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %nav.navbar.navbar-expand-sm.bg-dark.navbar-dark
      = link_to 'Main page', root_path
      %ul.navbar-nav
        %li.nav-item
          = link_to 'Create Order', new_orders_path, class: 'nav-link'
        %li.nav-item
          = link_to 'Payments and deliveries', payments_and_deliveries_path, class: 'nav-link'
        %li.nav-item
          = link_to 'Contacts', contacts_path, class: 'nav-link'
        %li.nav-item.nav-link
          $#{@usd_rate}
    = yield
